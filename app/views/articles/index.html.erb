<h1>the next techcrunch</h1>

<p><%= link_to 'Submit article', new_article_path %> </p>

<% @articles.each do |article| %>
  <p>
    <strong>
      <%= link_to article.title, article_path(article) %>
    </strong> |
      <%= link_to 'Edit', edit_article_path(article) %> |
      <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure? You will not be able to get this article back!' } %>
  </p>
<% end %>